<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDetailsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/ivDetailsImage"
        tools:layout_editor_absoluteX="16dp"
        tools:text="tinatina" />

    <ImageView
        android:id="@+id/ivDetailsImage"
        android:layout_width="59dp"
        android:layout_height="52dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTimeAgo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/tvDetailsUsername"
        app:layout_constraintTop_toBottomOf="@+id/ivDetailsImage"
        tools:text="5hr" />

    <TextView
        android:id="@+id/tvDetailsDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@+id/tvDetailsUsername"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Let's dance!" />
</androidx.constraintlayout.widget.ConstraintLayout>